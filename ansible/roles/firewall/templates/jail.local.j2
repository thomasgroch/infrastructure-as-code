[DEFAULT]
bantime = 3600
findtime = 600
maxretry = 5
backend = systemd

[sshd]
enabled = true
port = {{ ssh_port | default('22') }}
filter = sshd
logpath = /var/log/auth.log
maxretry = 3

[nginx-http-auth]
enabled = true
filter = nginx-http-auth
port = http,https
logpath = /var/log/nginx/error.log

[passbolt-auth]
enabled = true
filter = passbolt
port = http,https
logpath = /var/log/passbolt/*.log
maxretry = 5
findtime = 300
